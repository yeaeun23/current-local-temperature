<Window x:Class="Weather2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Weather2"
        mc:Ignorable="d"
        Width="96" Height="144" ResizeMode="NoResize" WindowStyle="None" Topmost="True" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Background="Black" Foreground="White" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*" />
            <RowDefinition Height="35*" />
            <RowDefinition Height="40*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="Date" FontSize="16" Text="88월 88일" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontFamily="Malgun Gothic" />
        <TextBlock Grid.Row="1" Name="Time" FontSize="34" Text="88:88" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Malgun Gothic" />
        <TextBlock Grid.Row="2" Name="Temp" FontSize="24" Text="88.8℃" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Malgun Gothic" />
    </Grid>
</Window>
